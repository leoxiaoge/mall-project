.nav-left {
		width: 30%;
}
.nav-left-item {
		height: 100rpx;
		border-right: solid 1px #ededed;
		border-bottom: solid 1px #ededed;
		font-size: 30rpx;
		display: -webkit-box;
		display: -webkit-flex;
		display: -ms-flexbox;
		display: flex;
		-webkit-box-align: center;
		-webkit-align-items: center;
